{% extends 'CoreBundle::layout.html.twig' %}

{% block body %}
<div class="container">


    <div class="page-header">
        <h1> Modifier </h1>
    </div>
    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}


    <div class="form-group">
        {{ form_label(edit_form.username, 'Prénom', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(edit_form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom' } }) }}
            {{ form_errors(edit_form.username) }}

        </div>
    </div>

    <div class="form-group">
        {{ form_label(edit_form.email, edit_form.email, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
            {{ form_errors(edit_form.email) }}

        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2">
            <input class="btn btn-success" type="submit" value="Modifier" />
            <a href="{{ path('carnetadresse_index') }}" class="btn btn-warning" type="submit">Annuler</a>
        </div>
    </div>
    {{ form_end(edit_form) }}

    </div>
{% endblock %}
