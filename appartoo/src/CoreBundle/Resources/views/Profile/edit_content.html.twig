{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="page-header">
        <h1> Mon profile </h1>
    </div>
    <div class="row">
        <div class="fos_user_user_show">
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit form-horizontal' } }) }}

            <div class="form-group">
                {{ form_label(form.username, form.username, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
                    {{ form_errors(form.username) }}

                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email, form.email, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.firstname, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom' } }) }}
                    {{ form_errors(form.firstname) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.address, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse' } }) }}
                    {{ form_errors(form.address) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.web_address, 'Web', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.web_address, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse Web' } }) }}
                    {{ form_errors(form.web_address) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.number, 'Numero tel', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.number, { 'attr': {'class': 'form-control', 'placeholder': 'Numero' } }) }}
                    {{ form_errors(form.number) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.current_password, form.current_password, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'form.current_password'|trans } }) }}
                    {{ form_errors(form.current_password) }}
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input class="btn btn-success" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                    <a class="btn btn-info" href="{{ path('fos_user_profile_show') }}">Cancel</a>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>